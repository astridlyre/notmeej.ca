---
const { props } = Astro;
---

<div class="mb-8">
	<header>
		<h1 class="text-lg mb-4">
			{props.title}
		</h1>
	</header>

	<section class="flex flex-wrap gap-4 w-full">
		{
			props.images?.map(({ href, alt }) => (
				<div class="max-w-full flex-1">
					<img
						class="object-cover w-full h-full"
						alt={alt}
						src={href}
					/>
				</div>
			))
		}
	</section>
	<div class="mt-3 h-0.5 bg-secondary"></div>
</div>
